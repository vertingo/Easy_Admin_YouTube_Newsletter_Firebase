{% extends basetemplate %}
{% trans_default_domain "IbrowsNewsletterBundle" %}
{% block layout_class %}design-create{% endblock layout_class %}

{% block newsletter_content %}
    <form action="{{ path('ibrows_newsletter_design_create') }}" method="post" {{ form_start(form) }}>
        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <div class="form-actions">
            <input class="btn btn-primary" type="submit" name="create" value="{{ 'form.save'|trans }}">
        </div>
    </form>
{% endblock %}
